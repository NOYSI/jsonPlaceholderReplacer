{
  "name": "json-placeholder-replacer",
  "version": "1.0.18",
  "description": "Javascript/Typescript library/cli to replace placeholders in an javascript object",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest && node dist/index.js rep map",
    "codeCoverage": "jest --silent --coverage",
    "lint": "node_modules/.bin/tslint --project tsconfig.json --force",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lopidio/jsonPlaceholderReplacer.git"
  },
  "keywords": [
    "json",
    "replacer",
    "substitution",
    "placeholder",
    "cli",
    "library",
    "typescript",
    "javascript",
    "javascript-library"
  ],
  "author": "Virgs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lopidio/jsonPlaceholderReplacer/issues"
  },
  "homepage": "https://github.com/lopidio/jsonPlaceholderReplacer#readme",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^9.4.6",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.10.0",
    "typescript": "^2.7.2"
  },
  "bin": {
    "json-placeholder-replacer": "dist/index.js"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 80,
        "functions": 95,
        "lines": 95
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
